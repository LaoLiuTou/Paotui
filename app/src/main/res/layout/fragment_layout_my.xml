<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_divider">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <include layout="@layout/top_bar_my"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="end"
            android:divider="@drawable/dividers_6">
            <RelativeLayout
                android:id="@+id/myinfo"
                android:background="@drawable/layout_my_selected_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/header"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/touxiang" />
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="用户名"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="88dp"/>
                <TextView
                    android:id="@+id/yuetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="余额:"
                    android:textSize="14dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="88dp"/>
                <TextView
                    android:id="@+id/yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="0.00"
                    android:textSize="14dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="120dp"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/right" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="end"
            android:divider="@drawable/dividers_3">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/yjzf"
                    android:background="@drawable/layout_my_selected_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/yijianzhifu" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:text="一键支付"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/right" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/color_divider"/>
                <RelativeLayout
                    android:id="@+id/zfjl"
                    android:background="@drawable/layout_my_selected_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/zhifujilu" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:text="支付记录"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/right" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/dividers_1">
            <RelativeLayout
                android:id="@+id/shdz"
                android:background="@drawable/layout_my_selected_bg"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/shouhuodizhi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="收货地址"
                    android:textSize="16dp"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/xggrxx"
                android:background="@drawable/layout_my_selected_bg"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/xiugai" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="修改个人信息"
                    android:textSize="16dp"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ghsjh"
                android:background="@drawable/layout_my_selected_bg"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/genghuanshouji" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="更换手机号码"
                    android:textSize="16dp"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bbjs"
                android:background="@drawable/layout_my_selected_bg"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/banben" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="版本介绍"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:text="v1.0"
                    android:textSize="16dp"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/right" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_title_bg"
                android:text="退出登录"
                android:textColor="@color/color_888888"
                android:textSize="18dp"/>
            </LinearLayout>

    </LinearLayout>


</ScrollView>