<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        <include layout="@layout/top_bar_back"/>

        <android.support.v7.widget.CardView
                android:id="@+id/title_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="0dp">
            <ImageView
                    android:id="@+id/title_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/banner_fupin1"
                    android:scaleType="fitXY"/>


        </android.support.v7.widget.CardView>


        <LinearLayout
                android:id="@+id/menus1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/bg_grey"
                android:layout_below="@+id/title_cardView">
            <LinearLayout
                    android:id="@+id/fpcp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingLeft="5dp"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="扶贫产品"
                            android:layout_marginTop="20dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/color_999999"
                            android:text="特色农产品"
                            android:layout_marginTop="5dp"/>
                </LinearLayout>
                <ImageView
                        android:id="@+id/fpcp_icon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@mipmap/fupinchanpin"
                        android:scaleType="fitXY" />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/bfsj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="帮扶商家"
                            android:layout_marginTop="20dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/color_999999"
                            android:text="帮扶助农平台"
                            android:layout_marginTop="5dp"/>
                </LinearLayout>
                <ImageView
                        android:id="@+id/bfsj_icon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@mipmap/fupinshangjia"
                        android:scaleType="fitXY" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:id="@+id/menus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/bg_grey"
                android:layout_below="@+id/menus1"
                android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/fpzs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="扶贫展示"
                            android:layout_marginTop="20dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_999999"
                            android:textSize="12dp"
                            android:text="扶贫攻坚成果"
                            android:layout_marginTop="5dp"/>
                </LinearLayout>
                <ImageView
                        android:id="@+id/fpzs_icon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@mipmap/fupinzhanshi"
                        android:scaleType="fitXY" />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/fptt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扶贫头条"
                            android:textSize="14dp"
                            android:layout_marginTop="20dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/color_999999"
                            android:text="最新扶贫资讯"
                            android:layout_marginTop="5dp"/>
                </LinearLayout>
                <ImageView
                        android:id="@+id/fptt_icon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@mipmap/fupintoutiao"
                        android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.CardView
                android:id="@+id/bottom_cardView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#ffffffff"
                android:layout_below="@+id/menus2">
            <ImageView
                    android:id="@+id/bottom_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@mipmap/banner_fupin2"
                    android:scaleType="fitXY"/>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>